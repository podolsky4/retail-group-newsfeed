<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root fillWidth="false" spacing="10.0" stylesheets="@../css/styles.css" type="javafx.scene.layout.VBox"
         xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <cursor>
        <Cursor fx:constant="HAND"/>
    </cursor>
    <padding>
        <Insets bottom="10.0" left="15.0" right="15.0" top="10.0"/>
    </padding>
    <styleClass>
        <String fx:value="article-wrap"/>
        <String fx:value="card-view"/>
    </styleClass>
    <Text fx:id="groupName" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="article-time" wrappingWidth="540.0"/>
    <HBox fillHeight="false" spacing="10.0">
        <ImageView fx:id="image" fitHeight="112.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true"/>
        <VBox prefWidth="310.0">
            <StackPane alignment="TOP_LEFT" prefHeight="95.0">
                <Text fx:id="title" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="article-title"
                      wrappingWidth="330.0"/>
            </StackPane>
            <Text fx:id="author" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="preview-meta"
                  wrappingWidth="330.0"/>
        </VBox>
    </HBox>
    <Text fx:id="shortBody" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="article-desc" wrappingWidth="540.0"/>
</fx:root>
