<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root fillWidth="false" spacing="5.0" stylesheets="@../css/styles.css" type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <Text fx:id="groupName" styleClass="article-header" wrappingWidth="540.0" />
   <BorderPane prefHeight="320.0" prefWidth="545.0">
      <center>
          <ImageView fx:id="image" fitWidth="545.0" nodeOrientation="INHERIT" preserveRatio="true" smooth="false" BorderPane.alignment="CENTER" />
      </center>
   </BorderPane>
    <Text fx:id="title" styleClass="article-title" wrappingWidth="540.0" />
    <Text fx:id="time" fill="#484848" styleClass="article-time" />
    <cursor>
        <Cursor fx:constant="HAND" />
    </cursor>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
   <styleClass>
      <String fx:value="article-wrap" />
      <String fx:value="card-view" />
   </styleClass>
</fx:root>
